<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/UploadCt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.upload.UploadFragment"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="15dp">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Đăng tải công thức của riêng bạn!"
           android:textSize="22dp"
           android:textStyle="bold"
           android:textColor="#FF3300"
           />
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="10dp">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="* Nhập Tên món ăn"
                   android:textSize="20dp"
                   android:textColor="@color/black"

                   />
               <EditText
                   android:id="@+id/input_tenmon"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nhập tên món ăn"
                   android:textSize="13dp"
                   android:textStyle="italic"

                   />
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="* Giới thiệu món ăn"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   />
               <EditText
                   android:id="@+id/input_mota"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nhập thông tin món ăn"
                   android:textSize="13dp"
                   android:textStyle="italic"
                   />
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="* Nguyên liệu món ăn"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   />
               <EditText
                   android:id="@+id/input_mota"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nhập thông tin nguyên liệu"
                   android:textSize="13dp"
                   android:textStyle="italic"
                   />
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="* Cách làm"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   />
               <EditText
                   android:id="@+id/input_mota"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nhập các bước "
                   android:textSize="13dp"
                   android:textStyle="italic"
                   />





               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="\nThông tin dinh dưỡng:"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   />
               <TableLayout
                   android:id="@+id/bangdinhduong"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <TableRow>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:padding="5dp"
                           android:text="SL"
                           android:textColor="@color/black" />
                       <TextView
                           android:text="Các chất dinh dưỡng"
                           android:padding="5dp"
                           android:textColor="@color/black"
                           />
                   </TableRow>
                   <TableRow>
                       <EditText
                           android:padding="5dp"
                           android:inputType="number"
                           />
                       <TextView
                           android:text="protid"
                           android:textStyle="italic"
                           android:textSize="10dp"
                           android:textColor="@color/black"
                           android:padding="5dp"
                           />
                   </TableRow>
                   <TableRow>
                       <EditText
                           android:padding="5dp"
                           android:inputType="number"
                           />
                       <TextView
                           android:text="lipit"
                           android:textStyle="italic"
                           android:textSize="10dp"
                           android:textColor="@color/black"
                           android:padding="5dp"
                           />
                   </TableRow>
                   <TableRow>
                       <EditText
                           android:padding="5dp"
                           android:inputType="number"
                           />
                       <TextView
                           android:text="glucid"
                           android:textStyle="italic"
                           android:textSize="10dp"
                           android:textColor="@color/black"
                           android:padding="5dp"
                           />
                   </TableRow>
                   <TableRow>
                       <EditText
                           android:padding="5dp"
                           android:inputType="number"
                           />
                       <TextView
                           android:text="chất xơ"
                           android:textStyle="italic"
                           android:textSize="10dp"
                           android:textColor="@color/black"
                           android:padding="5dp"
                           />
                   </TableRow>
                   <TableRow>
                       <EditText
                           android:padding="5dp"
                           android:inputType="number"
                           />
                       <TextView
                           android:text="calo"
                           android:textStyle="italic"
                           android:textSize="10dp"
                           android:textColor="@color/black"
                           android:padding="5dp"
                           />
                   </TableRow>

               </TableLayout>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="\nThêm hình ảnh cho món ăn:"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   />
               <ImageView
                   android:id="@+id/input_image"
                   android:layout_width="50dp"
                   android:layout_height="60dp"
                   android:src="@drawable/img_2"
                   android:layout_gravity="center"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:text="Ấn vào hình trên để tải ảnh"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="\nThêm video(Nếu có):"
                   android:textSize="20dp"
                   android:textColor="@color/black"
                   />
               <EditText
                   android:id="@+id/input_mota"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Nhập link video  "
                   android:textSize="13dp"
                   android:textStyle="italic"
                   />
               <Button
                   android:id="@+id/bt_Upload"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Hoàn tất"
                   android:layout_gravity="center"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center_horizontal"
                   android:text="Sau khi nhấn hoàn tất công thức của bạn sẽ được \nkiểm duyệt"
                   android:textStyle="italic"

                   />
           </LinearLayout>
       </ScrollView>

   </LinearLayout>
    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>